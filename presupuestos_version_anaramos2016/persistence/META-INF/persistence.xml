<?xml version="1.0" encoding="UTF-8"?>


<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
             
    <!-- Tomcat + Postgres -->

   <!-- JDBC postgresql - esto es para el ECLIPSE NO para la APlicacion -->
        <persistence-unit name="default">
            <provider>org.hibernate.ejb.HibernatePersistence</provider>
            <properties>
                <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
                <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
                <property name="hibernate.connection.url" value="jdbc:postgresql://cafe.lcompras.biz:5432/presupuestos"/>
                <property name="hibernate.connection.username" value="presupuestos"/>
                <property name="hibernate.connection.password" value="presupuestos"/>          
            </properties>    
        </persistence-unit>
   		<!--  JNDI postgreSQL - esto es para la aplicacion SOLAMENTE -->
        <persistence-unit name="presupuestosJNDI">
            <provider>org.hibernate.ejb.HibernatePersistence</provider>
            <non-jta-data-source>java:comp/env/jdbc/presupuestosPG</non-jta-data-source>
            <class>org.openxava.session.GalleryImage</class>
            <properties>
                 <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            </properties>
        </persistence-unit>            
            
    
    <!-- JUnit PostgreSQL -->
    <persistence-unit name="junit">
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.connection.url" value="jdbc:postgresql://cafe.lcompras.biz:5432/presupuestos"/>
 			<property name="hibernate.connection.username" value="presupuestos"/>
 			<property name="hibernate.connection.password" value="presupuestos"/>
        </properties>
    </persistence-unit>   
       
</persistence>
